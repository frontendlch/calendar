@import 'nib'

tomato = #fc4e59
mediumvioletred = #e01467
crimson = #e21515
orangered = #ec3800
orangered_light = #f95b00
darkorange = #f56e00
goldenrod = #ffb736
khaki = #fced58
olivedrab = #7cb51e
turquoise = #38e3cf
darkcyan = #179c93
royalblue = #1c80cc
royalblue_dark = #2264ff
blue = #0514ed
blueviolet = #8a2aff
darkviolet = #5800d2

body
	background-color khaki
	font-family 'Source Sans Pro', sans-serif
	transition 0.3s ease all
h3
	color #FFF
	font-size 1.5em
	font-weight 400
	margin-top 0
.date-to-event
	position absolute
	display flex
	align-items center
	justify-content space-around
	h3
		color white
		font-size 1.3em
		margin 0
		margin-right 10px
		opacity 0
		transition 0.3s ease all
	span
		border 2px solid khaki
		border-radius 50%
		height 28px
		width 28px
		display flex
		justify-content space-around
		align-items center
section
	background-color #29323f
	box-shadow 10px 10px 30px rgba(0,0,0,0.5)
	color #fff
	width 380px
	height 430px
	margin 100px auto
	
	header
		height 20px
		line-height 20px
		padding 10px
		display flex
		aling-item center
		justify-content space-between
		#show-color
			background-color khaki
			width 7px
			height 7px
			border-radius 50%
			cursor pointer
			margin-left 10px;
			margin-top 10px;
		#show-menu
			font-size 1em
			cursor pointer
			margin-right 10px
			margin-top 5px;
		#back-to-calendar
			font-size 1.3em
			color gray
			cursor pointer
	article
		height 100%
		> .active
			display block
		> div
			display none
			position relative
			height 100%
		#choose-color-section
			width 70%
			margin 0 auto;
			text-align center
			h3
				margin-bottom 2em
			> div
				display flex
				align-item center
				justify-content space-between
				margin-bottom 20px
				span
					// width 40px
					// height 40px
					// Para la animacion reset a 0
					width 0
					height 0
					opacity 0
					border-radius 50%
					border 4px solid transparent
					cursor pointer
					transition 0.3s ease all
					&.active,
					&:hover
						border-color #FFF
				#tomato
					background-color tomato
				#mediumvioletred
					background-color mediumvioletred
				#crimson
					background-color crimson
				#orangered
					background-color orangered
				#orangered-light
					background-color orangered_light
				#darkorange
					background-color darkorange
				#goldenrod
					background-color goldenrod
				#khaki
					background-color khaki
				#olivedrab
					background-color goldenrod
				#turquoise
					background-color turquoise
				#darkcyan
					background-color darkcyan
				#royalblue
					background-color royalblue
				#royalblue-dark
					background-color royalblue_dark
				#blue
					background-color blue
				#blueviolet
					background-color blueviolet
				#darkviolet
					background-color darkviolet
		#calendar-section
			text-align center
			width 85%
			margin 0 auto
			.fc-slats,
			.fc-content-skeleton,
			.fc-bgevent-skeleton
				pointer-events none
			.fc-bgevent,
			.fc-event-container
				pointer-events auto
			.fc-right
				margin-right 60px
			.fc-left
				margin-left 60px
			.fc-right,
			.fc-left
				button
					background none
					box-shadow none
					outline none
					border none
			.fc-center
				color khaki
				font-size 1em
			.fc-day-grid
				margin-top 25px
			.fc-day-grid-container
				height auto !important
				overflow hidden
			.fc-other-month
				visibility hidden
			.fc-day,
			.fc-day-number
				text-align center
				cursor pointer
				z-index 99999
				position relative
			.fc-row
				min-height 1.5em
			.fc-widget-header,
			.fc-widget-content
				border none
				font-size 1.15em
			.fc-today
				background transparent
				color khaki
			.fc-icon-right-single-arrow:after,
			.fc-icon-left-single-arrow:after
				color gray
			.with-event
				position absolute
				border 2px solid khaki
				border-radius 50%
				display block
				height 28px
				width 28px
				left 0
				right 0
				margin 0 auto
				margin-top 1px
			.new-event-date
				position relative
				border 2px solid transparent
				border-radius 50%
				display block
				height 28px
				width 28px
				margin-left 8px
			.add-event-active:after
				background khaki
			.td-with-event
				color #29323f
			.add-event-section
				height 60px
				line-height 60px
				background white
				width 100%
				display none
				margin-top 13px
				z-index 99999
				div
					position relative
					height 100%
					span
						width 0
						height 0
						border-left 6px solid transparent
						border-right 6px solid transparent
						border-bottom 6px solid white
						position absolute
						top -6px
					.fa
						position absolute
						right 10px
						top 15px
						color lightgray
						font-size 1.4em
					input
						border none
						display block
						height 100%
						width 100%
						padding 10px
						box-sizing border-box
						outline none
						font-size 1em
		#event-section
			width 95%
			margin 0 auto
			text-align center
			margin-top 30px
			#weather
				span
					display flex
					align-items center
					justify-content center
					.fa
						font-size 3em
						margin-right 10px
					h4
						font-size 3em
						font-weight 300
						margin 0
			#event-description
				position absolute
				bottom 70px
				padding 10px
				background white
				color #333
				padding-bottom 25px
				&:before
					content ''
					background rgba(255,255,255,0.3)
					position absolute
					height 10px
					margin 0 auto
					left 0
					right 0
					top -10px
					width 95%
				h4
					font-size 1.6em
					margin-top 10px
				> div
					display flex
					justify-content space-between
					div
						padding 0 5px
						.fa
							color #8485cd
							display block
							font-size 1.8em
						strong
							text-transform uppercase
							font-size 0.8em
						p
							color gray
							font-size 0.8em













